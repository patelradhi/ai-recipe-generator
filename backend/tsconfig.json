{
	"compilerOptions": {
		"target": "es2017",
		"module": "es6",
		"lib": ["es6"],
		"allowJs": false,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
